<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.GeRenZX.YiJianActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#eea9b8">
        <ImageView
            android:id="@+id/yijian_return"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@mipmap/return_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="意见反馈"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/yijian_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="   请输入标题"
        android:textColorHint="#737272"
        android:textColor="@color/black"
        android:background="@drawable/yijian_et"/>
    
    <EditText
        android:id="@+id/yijian_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:hint="    请输入内容....."
        android:textColorHint="#737272"
        android:gravity="top"
        android:layout_marginTop="20dp"
        android:maxEms="150"
        android:textColor="@color/black"
        android:background="@drawable/yijian_et"/>

    <Button
        android:id="@+id/yijian_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"
        android:background="@drawable/guide_btn"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40sp"/>

</LinearLayout>